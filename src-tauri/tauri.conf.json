{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "free-voip",
  "version": "0.1.0",
  "identifier": "dev.codeboi.free-voip",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Free VoIP",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' blob: data: media:; media-src 'self' data: blob:; connect-src 'self' https:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
